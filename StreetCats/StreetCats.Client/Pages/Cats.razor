                    <option value="">Tutti</option>
                    <option value="Arancione">ğŸ§¡ Arancione</option>
                    <option value="Grigio">ğŸ¤ Grigio</option>
                    <option value="Nero">ğŸ–¤ Nero</option>
                    <option value="Bianco">ğŸ¤ Bianco</option>
                    <option value="Tigrato">ğŸ… Tigrato</option>
                    <option value="Maculato">ğŸ”´ Maculato</option>
                    <option value="Tricolore">ğŸ”µ Tricolore</option>
                </select>
            </div>
            
            <!-- Sort By -->
            <div>
                <label class="block text-sm font-medium text-gray-700 mb-1">Ordina per</label>
                <select @bind="SortBy" 
                        class="w-full px-3 py-2 border border-gray-300 rounded-md text-sm focus:ring-2 focus:ring-streetcats-orange focus:border-transparent">
                    <option value="newest">ğŸ•’ PiÃ¹ recenti</option>
                    <option value="oldest">ğŸ“… PiÃ¹ vecchi</option>
